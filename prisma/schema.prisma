generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Customer {
  id       Int @id @default(autoincrement())
  name     String?
  email    String @unique
  password String?
  orders   Order[]
}

model HostingsSolution {
  id    Int @id @default(autoincrement())
  title String?
  price Int?
  type  String?
  rom   Int
  ram   Int
  cores Int
  //order Order @relation(fields: [id], references: [id])
}

model Order {
  id         Int @id @default(autoincrement())
  data       DateTime
  title      String
  customerID Int
  customer   Customer  @relation(fields: [customerID], references: [id])
  solutionID Int //HostingsSolution[]
  status String?
  //employee Employee?
}

